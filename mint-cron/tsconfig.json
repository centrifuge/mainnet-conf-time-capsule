{
  "compilerOptions": {
    "declaration": true,
    "lib": ["ES2021"],
    "module": "es6",
    "target": "ES2020",
    "skipLibCheck": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts"]
}
